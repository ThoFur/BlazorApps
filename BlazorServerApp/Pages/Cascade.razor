@page "/cascade"
<h1>Cascade</h1>
<p>Waarde getal in cascade.razor: @Getal</p>
<button class="btn btn-primary mb-2" @onclick="Verhoog">Verhoog de waarde van het getal met 1</button>

<CascadingValue Name="HetGetal" Value="@Getal">
    <CascadingValue Name="HetWoord" Value="@Woord">
        <SubComponent />
    </CascadingValue>
</CascadingValue>

<CascadingValue Name="Gegevens" Value="@Gegevens">
    <SubComponent/>
</CascadingValue>

@code{

    private int Getal = 10;
    private string Woord = "VDAB";
    private void Verhoog(){
        Getal++;
    }
    private GegevensClass Gegevens = new GegevensClass
    {
        Eerste = 1,
        Tweede = "Twee",
        Derde = "Drie"
    };
}