@page "/counter"

<PageTitle>Counter</PageTitle>

@if(@currentCount < 20)
{
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="images/Count To 20.png" alt="Card image cap">
        <div class="card-body" style="background-color:mediumpurple">
            
            <h1 class="card-text" style="text-align:center; color:peachpuff; ">@currentCount</h1>
            
        </div>
    </div>
    @*<p role="status">Current count: @currentCount</p>*@
}
else
{
    <div>
        
    <h3 style="margin-left:4rem;">Wie niet weg is, is gezien !</h3>
    <img src="images/Hide_and_seek.png" height="400px" alt="hideAndSeek" />
    </div>
      
}
<br />

<button class="btn btn-primary" style="@buttonStyle" @onclick="IncrementCount">@(currentCount == 20 ?  "Reset" : "Count")</button>
<br />
<br />
<CopyrightFooter Auteur="Thomas" Jaartal="2024"></CopyrightFooter>

@code {
    private int currentCount = 0;
    string buttonStyle;


    private void IncrementCount()
    {
        if (currentCount < 20)
        {
            
            currentCount++;

        }

        else
        {
            
            currentCount = 0;
           
        }
        
    if (currentCount == 20)
    {
        buttonStyle = "margin-left: 13rem;";
    }
    else
    {
        buttonStyle = "margin-left: 6rem;";
    }
           
           
    }
  


}
